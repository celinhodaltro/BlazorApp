@page "/Conta"
@page "/Conta/Index"
@using Lib.Data
@using Lib.Services
@using Lib.Data.Entities


<link href="css/login.css" rel="stylesheet" />

<div id="card-login">


    <h3>Logar</h3>

    <label>Login:</label>
    <input @bind="Conta.Nome" placeholder="Digite o seu Login" />

    <label>Senha:</label>
    <input type="password" @bind="Conta.Senha" placeholder="Digite a sua Senha" />

    <input type="submit" id="Logar" value="login">
    <p class="mt-2">Se deseja criar a sua conta, <a href="/Conta/Criar">clique aqui</a> para se registrar!</p>
</div>



